---
import Layout from '../../layouts/Layout.astro';
import RegistrationForm from '../../components/organisms/RegistrationForm';
import { useI18n } from '../../utils/i18n';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'km' } },
    { params: { lang: 'zh' } },
    { params: { lang: 'ja' } }
  ];
}

const { lang } = Astro.params;
const { t } = useI18n(Astro.url);
---

<Layout 
  title={t('auth.register.title')}
  description={t('auth.register.subtitle')}
>
  <div class="max-w-md mx-auto">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white text-center">
      {t('auth.register.title')}
    </h1>
    <p class="mt-2 text-center text-gray-600 dark:text-gray-300">
      {t('auth.register.subtitle')}
    </p>

    <div class="mt-8">
      <RegistrationForm client:load />
    </div>

    <p class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400">
      {t('auth.register.haveAccount')}{' '}
      <a href="/login" class="text-purple-600 hover:text-purple-500">{t('auth.login.title')}</a>
    </p>
  </div>
</Layout>