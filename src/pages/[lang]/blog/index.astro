---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/molecules/Card.astro';

const posts = [
  {
    slug: 'first-post',
    title: 'First Blog Post',
    publishDate: '2024-03-20',
    description: 'This is our first blog post.'
  },
  {
    slug: 'second-post',
    title: 'Second Blog Post',
    publishDate: '2024-03-21',
    description: 'This is our second blog post.'
  }
];
---

<Layout 
  title="Blog"
  description="Read our latest articles and updates"
>
  <div class="text-center">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900">Our Blog</h1>
    <p class="mt-6 text-lg leading-8 text-gray-600">
      Latest articles, news, and updates from our team.
    </p>
  </div>

  <div class="mt-16 grid gap-8 sm:grid-cols-2">
    {posts.map(post => (
      <Card title={post.title} description={post.description}>
        <div class="flex justify-between items-center">
          <time datetime={post.publishDate} class="text-sm text-gray-500">
            {new Date(post.publishDate).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <a
            href={`/blog/${post.slug}`}
            class="text-sm font-medium text-purple-600 hover:text-purple-700"
          >
            Read more â†’
          </a>
        </div>
      </Card>
    ))}
  </div>
</Layout>